{
    "app-id": "com.sublimetext.Client",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "1.4",
    "sdk": "org.freedesktop.Sdk",
    "branch": "master",
    "command": "subl",
    "separate-locales": false,
    "finish-args": [
        /* X11 + XShm access */
        "--share=ipc", "--socket=x11",
        /* Network access */
        "--share=network",
        /* Media keys: */
        "--talk-name=org.gnome.SettingsDaemon",
        "--extra-data=sublime.deb:f3f31634c05243e33a82a96e82c3cd691958057489e47eebe8ac3b0c0e6dd3b4:7746994::https://download.sublimetext.com/sublime-text_build-3126_amd64.deb"
    ],
    "build-options" : {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g",
        "env": {
            "V": "1"
        }
    },
    "cleanup": ["/include", "/lib/pkgconfig",
                "/share/pkgconfig", "/share/aclocal",
                "/man", "/share/man", "/share/gtk-doc",
                "/share/vala",
                "*.la", "*.a"],
    "modules": [
        {
            "name": "sublime",
            "no-autogen": true,
            "sources" : [
                {
                    "type": "file",
                    "path": "apply_extra"
                },
                {
                    "type": "file",
                    "path": "sublime.sh"
                },
                {
                    "type": "file",
                    "path": "sublime-Makefile",
                    "dest-filename": "Makefile"
                },
                {
                    "type": "file",
                    "path": "open-uri-portal.desktop"
                },
                {
                    "type": "file",
                    "path": "mimeapps.list"
                }
            ],
            "post-install": [
                "mkdir -p /app/etc/xdg",
                "cp mimeapps.list /app/etc/xdg",
                "mkdir -p /app/share/applications",
                "cp open-uri-portal.desktop /app/share/applications"
            ]
        }
    ]
}
